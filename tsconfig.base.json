{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "noEmitOnError": true,

    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "isolatedModules": true,
    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,

    "lib": ["ESNext", "ESNext.Array", "DOM"],

    "baseUrl": ".",
    "paths": {
      "*": ["types/*"],
      "@onnimonni/notion-utils": ["packages/notion-utils/build"],
      "@onnimonni/notion-types": ["packages/notion-types"],
      "@onnimonni/notion-client": ["packages/notion-client/build"],
      "@onnimonni/notion-compat": ["packages/notion-compat/build"],
      "@onnimonni/react-notion-x": ["packages/react-notion-x/build"]
    }
  }
}
